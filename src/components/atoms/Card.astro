---
import Icon from './Icon.astro';

interface Props {
  iconSrc: string;           // SVG path for the icon
  iconAlt?: string;          // Alt text for the icon
  title: string;             // Title of the card
  description: string;       // Description inside the card
  linkText: string;          // Text for the link
  linkHref: string;          // URL for the link
  className?: string;        // Additional classes for customization
}

const {
  iconSrc,
  iconAlt = '',
  title,
  description,
  linkText,
  linkHref,
  className = ''
} = Astro.props;
---

<div class={`max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 ${className}`}>
  <!-- Icon -->
  <Icon src={iconSrc} alt={iconAlt} />

  <!-- Card Title -->
  <a href={linkHref}>
    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{title}</h5>
  </a>

  <!-- Card Description -->
  <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">{description}</p>

  <!-- Link -->
  <a href={linkHref} class="inline-flex font-medium items-center text-blue-600 hover:underline">
    {linkText}
    <svg class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"/>
    </svg>
  </a>
</div>
