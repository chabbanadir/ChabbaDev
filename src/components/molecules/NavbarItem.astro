---
import Icon from '../atoms/Icon.astro';

interface Props {
  label: string;
  href: string;
  subitems?: {label:string ,href:string }[]; 
  icon: string
}

const { label, href , icon} = Astro.props;
---

<a href={href} class="menu relative flex items-center space-x-2 text-black font-bold px-2 py-2 transition duration-300 ease-in-out">
  {icon && <Icon src={icon} alt={`${label} icon`} className="w-5 h-5" />}
  <span>{label}</span>
</a>

<style>
  .menu::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: #1e90ff;
    bottom: 0;
    left: 0;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.5s ease;
  }

  .menu:hover::before {
    transform: scaleX(1);
  }
</style>