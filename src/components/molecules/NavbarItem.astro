---
interface Props {
  label: string;
  href: string;
}

const { label, href } = Astro.props;
---

<a href={href} class="menu relative text-white font-bold px-2 py-2 transition duration-300 ease-in-out">
  {label}
</a>

<style>
  .menu::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background: #1e90ff;
    bottom: 0;
    left: 0;
    transform: scaleX(0);
    transform-origin: center;
    transition: transform 0.5s ease;
  }

  .menu:hover::before {
    transform: scaleX(1);
  }
</style>
