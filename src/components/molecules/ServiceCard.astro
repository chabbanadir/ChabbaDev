---
interface Props {
  title: string;
  description: string;
  iconUrl: string;
  linkUrl: string;
}

const { title, description, iconUrl, linkUrl } = Astro.props;
---

<div class="service-card p-6 max-w-sm bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 ease-in-out">
  <div class="icon mb-4">
    <img src={iconUrl} alt={title} class="h-12 w-12 mx-auto" />
  </div>
  <h3 class="title text-xl font-semibold text-blue-600 mb-2 text-center">{title}</h3>
  <p class="description text-gray-700 text-center mb-4">{description}</p>
  <a href={linkUrl} class="text-blue-500 font-bold hover:underline text-center block">Learn More</a>
</div>