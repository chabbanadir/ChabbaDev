---
interface Props {
  name: string;
  role: string;
  imageUrl: string;
  iconUrl?: string;
}

const { name, role, imageUrl, iconUrl = '/icons/cta/cta.svg' } = Astro.props;
---

<div class="team-member-card p-6 max-w-sm bg-white rounded-lg shadow-md hover:bg-blue-600 hover:text-white hover:shadow-lg transition-all duration-300 ease-in-out">
  <div class="image mb-4">
    <img src={imageUrl} alt={name} class="h-24 w-24 rounded-full mx-auto" />
  </div>
  <h3 class="name text-xl font-semibold mb-1 text-center">{name}</h3>
  <p class="role text-gray-700 mb-4 text-center">{role}</p>
  <div class="icon flex justify-center">
    <img src={iconUrl} alt="CTA icon" class="h-8 w-8" />
  </div>
</div>
